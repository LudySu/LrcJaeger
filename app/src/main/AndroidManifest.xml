<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="orz.ludysu.lrcjaeger"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LrcJaeger"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SearchDialog"
            android:excludeFromRecents="true"
            android:label="@string/search_dialog"
            android:windowSoftInputMode="stateAlwaysVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/action_hide_folder" >
        </activity>
        <activity
            android:name=".HideFoldersActivity"
            android:label="@string/title_hide_folder"
            android:parentActivityName=".LrcJaeger" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="orz.ludysu.lrcjaeger.LrcJaeger" />
        </activity>
        <activity
            android:name=".DisplayLrcActivity"
            android:label="@string/title_display_lrc"
            android:parentActivityName=".LrcJaeger" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="orz.ludysu.lrcjaeger.LrcJaeger" />
        </activity>
    </application>

</manifest>
